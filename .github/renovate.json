{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":gitSignOff"
  ],
  "includePaths": ["images/**"],
  "ignorePresets": [":prHourlyLimit2"],
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": true,
  "baseBranches": [
    "master",
    "v1.12",
    "v1.11",
    "v1.10"
  ],
  "labels": [
    "kind/enhancement",
    "release-note/misc"
  ],
  "postUpgradeTasks": {
    "commands": ["make -C images/ update-runtime-image"],
    "fileFilters": ["images/runtime/Dockerfile", "images/builder/Dockerfile"],
    "executionMode": "update"
  }
}
